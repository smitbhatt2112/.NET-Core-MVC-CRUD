@model Project_Management.Models.CombineModel;
@using System.Data;

<form role="form" class="form-horizontal"  asp-controller="Products" asp-action="Save" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.Product.ProductId)
    @Html.HiddenFor(x=>x.ProductDetail.Product_Details_Id)
    <h2>Product Name:</h2>
       <input type="text" class="form-control " id="form_control_1" asp-for="Product.ProductName" placeholder="Enter Product Name" autofocus>
       <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    <h2>Product Brand:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="Product.ProductBrand" placeholder="Enter Product Brand" autofocus>
    <span asp-validation-for="Product.ProductBrand" class="text-danger"></span>

    <h2>Product Manufacturer:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="Product.ProductManufacturer" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="Product.ProductManufacturer" class="text-danger"></span>
     <br />

    <h2>Product Varient:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductDetail.ProductVarient" placeholder="Enter Product Name" autofocus>
    <span asp-validation-for="ProductDetail.ProductVarient" class="text-danger"></span>
    <br />
    <h2>Product Color:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductDetail.ProductColor" placeholder="Enter Product Brand" autofocus>
    <span asp-validation-for="ProductDetail.ProductColor" class="text-danger"></span>
    <br />
    <h2>Product Description:</h2>
    <input type="textarea" class="form-control " id="form_control_1" asp-for="ProductDetail.ProductDes" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDetail.ProductDes" class="text-danger"></span>
    <br />
    <h2>Product Cost:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductDetail.ProductCost" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDetail.ProductCost" class="text-danger"></span>
    <br />
    <h2>Product Sale price:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductDetail.ProductSalePrice" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDetail.ProductSalePrice" class="text-danger"></span>
    <br />
    <h2>Product Image:</h2>
    <input type="file" class="form-control " id="form_control_1" asp-for="ProductDetail.File" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDetail.File" class="text-danger"></span>
    <br />
   
    <br />
    <input type="submit" class="btn btn-success" />
    <a class="btn btn-danger" asp-controller="Products" asp-action="Index">Cancel</a>
</form>

