@using System.Data;
@model DataTable

<!DOCTYPE html>
<html>
<head>
    <title>Product Details</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/Products.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
   

    <!-- Pagecode -->
    <div class="container">
        <a class="btn btn-danger" asp-controller="Products" asp-action="Index" style="width:100px;">Back</a>
        <div id="productDetails">
            @foreach (DataRow dr in Model.Rows)
            {
                <div id="prodimage"><img id="prodimagedetailsimg" src="@Url.Content(dr["ProductImage"].ToString())" /></div>
            <div id="proddes">
                    <h3>Product Variant:</h3>
                    <h4>@dr["ProductVariant"]</h4>
                    <h3>Product Color:</h3>
                    <h4>@dr["ProductColor"]</h4>
                    <h3>Product Description:</h3>
                    <p>@dr["ProductDes"]</p>
                    <h3>Product Cost:</h3>
                    <h4>@dr["ProductCost"]</h4>
                    <h3>Product Price:</h3>
                    <h4>@dr["ProductSalePrice"]</h4>
            </div>
            }
        </div>
    </div>

   
    <!-- Bootstrap code -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="ProductDetails.js"></script>
</body>
</html>
