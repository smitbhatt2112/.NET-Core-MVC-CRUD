@model Project_Management.Models.Product_DetailsModel;
@using System.Data;

<form role="form" class="form-horizontal"  asp-controller="Product_Details" asp-action="Save" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.Product_Details_Id)
    @Html.HiddenFor(x=>x.ProductId)
    <h2>Product Varient:</h2>
       <input type="text" class="form-control " id="form_control_1" asp-for="ProductVarient" placeholder="Enter Product Name" autofocus>
       <span asp-validation-for="ProductVarient" class="text-danger"></span>
    <br />
    <h2>Product Color:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductColor" placeholder="Enter Product Brand" autofocus>
    <span asp-validation-for="ProductColor" class="text-danger"></span>
    <br />
    <h2>Product Description:</h2>
    <input type="textarea" class="form-control " id="form_control_1" asp-for="ProductDes" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDes" class="text-danger"></span>
     <br />
    <h2>Product Cost:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductCost" placeholder="Enter Product Manufacturer" autofocus>
    <br />
    <h2>Product Sale price:</h2>
    <input type="text" class="form-control " id="form_control_1" asp-for="ProductSalePrice" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="ProductDes" class="text-danger"></span>
    <br />
    <h2>Product Image:</h2>
    <input type="file" class="form-control " id="form_control_1" asp-for="File" placeholder="Enter Product Manufacturer" autofocus>
    <span asp-validation-for="File" class="text-danger"></span>
    <br />
    <span asp-validation-for="ProductCost" class="text-danger"></span>
    <br />
    <input type="submit" class="btn btn-success" />
    <a class="btn btn-danger" asp-controller="Products" asp-action="Index">Cancel</a>
</form>